{
  "name": "ui-test",
  "version": "0.1.0",
  "description": "No-code E2E testing framework - record and replay browser tests with YAML",
  "type": "module",
  "bin": {
    "ui-test": "./dist/bin/ui-test.js"
  },
  "files": [
    "dist",
    "examples/vue-app",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "bootstrap": "node ./scripts/bootstrap.mjs install",
    "bootstrap:setup": "node ./scripts/bootstrap.mjs setup",
    "bootstrap:quickstart": "node ./scripts/bootstrap.mjs quickstart --run-play",
    "build": "node ./scripts/clean-dist.mjs && tsc -p tsconfig.build.json && node ./scripts/fix-bin-perms.mjs",
    "help": "node ./scripts/help.mjs",
    "prepare": "npm run build",
    "dev": "tsc --watch",
    "lint": "eslint src --max-warnings=0",
    "lint:fix": "eslint src --fix",
    "lint:typed": "eslint -c eslint.typed.config.mjs src --max-warnings=0",
    "test": "vitest run",
    "test:framework": "vitest run",
    "test:smoke": "node ./scripts/smoke-consumer.mjs",
    "check:npm-name": "node ./scripts/check-npm-name.mjs",
    "test:watch": "vitest",
    "test:unit": "vitest run --exclude '**/*.integration.test.ts'",
    "test:integration": "vitest run src/**/*.integration.test.ts",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "e2e",
    "testing",
    "playwright",
    "no-code",
    "yaml"
  ],
  "license": "MIT",
  "dependencies": {
    "@inquirer/prompts": "^8.2.0",
    "acorn": "^8.15.0",
    "chalk": "^5.6.2",
    "commander": "^14.0.3",
    "globby": "^16.1.0",
    "js-yaml": "^4.1.1",
    "ora": "^9.3.0",
    "playwright": "^1.58.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.58.2",
    "@types/estree": "^1.0.8",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.2.2",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0",
    "vitest": "^4.0.18"
  }
}
