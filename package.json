{
  "name": "easy-e2e",
  "version": "0.1.0",
  "description": "No-code E2E testing framework - record and replay browser tests with YAML",
  "type": "module",
  "bin": {
    "easy-e2e": "./dist/bin/easy-e2e.js"
  },
  "files": [
    "dist",
    "examples/vue-app",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "node ./scripts/clean-dist.mjs && tsc -p tsconfig.build.json && node ./scripts/fix-bin-perms.mjs",
    "prepare": "npm run build",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:framework": "vitest run",
    "test:smoke": "node ./scripts/smoke-consumer.mjs",
    "test:watch": "vitest",
    "test:unit": "vitest run --exclude '**/*.integration.test.ts'",
    "test:integration": "vitest run src/**/*.integration.test.ts",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "e2e",
    "testing",
    "playwright",
    "no-code",
    "yaml"
  ],
  "license": "MIT",
  "dependencies": {
    "@inquirer/prompts": "^8.2.0",
    "acorn": "^8.15.0",
    "chalk": "^5.6.2",
    "commander": "^14.0.3",
    "globby": "^16.1.0",
    "js-yaml": "^4.1.1",
    "ora": "^9.3.0",
    "playwright": "^1.58.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/estree": "^1.0.8",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.2.2",
    "@vitest/coverage-v8": "^4.0.18",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
